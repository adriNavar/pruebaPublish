@using GeoSit.Client.Web.Controllers;
@{
    ViewBag.Title = "Asociación de Objetos Gráficos y Alfanuméricos";
}

<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/admParcelaGrafica.css" rel="stylesheet" />

<div class="modal fade theme_new" id="modal-window-parcelagrafica" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="modal-windowLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.AntiForgeryToken()
            <div id="scroll-content-tagueador" class="scroll-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="lblModalparcelagrafica">@ViewBag.Title</h3>
                    <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
                </div>
                <div class="modal-body tagueador-body">
                    <div class="body-content tagueador-content">
                        <div class="col-xs-5 remove-padding">
                            <div class="panel remove-margin remove-shadow">
                                <div class="panel-body">
                                    <div class="form-horizontal" style="margin-top: 3px;">
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                <div class="input-group">
                                                    <input type="search" value="" placeholder="Buscar partida..." class="form-control search-filter" id="txtFiltroParcelas" onkeypress="runSearch(event)">
                                                    <div class="input-group-addon cursor-pointer">
                                                        <span aria-hidden="true" data-placement="bottom" title="Buscar" id="btnSearch" class="fa-lg fa fa-search black cursor-pointer"></span>
                                                        <span aria-hidden="true" data-placement="bottom" title="Buscar" id="btnClearSearch" class="fa-lg fa fa-trash black cursor-pointer"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div id="DivGrillaNomenclaturas">
                                            <table id="Grilla_ParcelaGrafica" class="table table-striped table-bordered table-responsive">
                                                <thead>
                                                    <tr>
                                                        <th class="hide"></th>
                                                        <th class="hide"></th>
                                                        <th>Partida</th>
                                                        <th></th>
                                                        <th></th>
                                                        <th class="hide"></th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-top:10px">
                                        <div class="pull-right col-xs-4 text-right">
                                            @if (SeguridadController.ExisteFuncion(@Resources.Seguridad.RealizarAsosicion))
                                            {
                                                <span aria-hidden="true" data-placement="right" title="Desasociar" data-original-title="Desasociar" id="btnDesasociarGraficamente" class="fa fa-unlink fa-2x black cursor-pointer"></span>
                                            }
                                            @if (SeguridadController.ExisteFuncion(@Resources.Seguridad.RealizarDesasociacion))
                                            {
                                                <span style="margin-left: 10px" aria-hidden="true" data-placement="right" title="Asociar" data-original-title="Guardar" id="btnAsociarGraficamente" class="fa fa-link fa-2x black cursor-pointer"></span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-7" id="divmapa">
                            <div class="panel remove-margin remove-shadow">
                                <div class='panel-heading bg-primary main-heading'>
                                    <a href="javascript:void(0)">
                                        <div class='panel-title'>
                                            Mapa
                                            <div class="col-xs-2 pull-right text-right remove-padding">
                                                <span class="fa fa-search fa-lg cursor-pointer" id="btnBuscarObjetoReferencia"></span>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <div id="panel-mapa" class="panel-collapse collapse main-collapse in panel-mapa">
                                    <div class="panel-body">
                                        <div id="map-tag" style="width:100%;height:100%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="buscador-container"></div>
<div id="parcela-grafica-externo-container"></div>

<!-- Modal Información-->
<div class="modal fade theme_new mensaje" id="ModalInfoParcelaGraf" tabindex="-3" role="dialog" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Titulo</h3>
                <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
            </div>
            <div class="modal-body">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <p>Descripcion de la informacion</p>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-xs-4 pull-right">
                    <span aria-hidden="true" data-placement="right" title="Aceptar" data-original-title="Aceptar" id="btnAceptarModalInfoParcelaGraf" class="fa fa-check-circle fa-3x light-blue cursor-pointer"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.dataTables.js"></script>
<script src="~/Scripts/ParcelaGrafica/main.js"></script>